{
  "name": "dynamo-data-migrations",
  "version": "1.0.0",
  "description": "A library to easily run migrations on DynamoDb with TypeScript.",
  "main": "build/src/bin/migrateDynamo.js",
  "types": "build/src/bin/migrateDynamo.d.ts",
  "bin": {
    "dynamo-data-migrations": "build/src/bin/migrateDynamo.js"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "tsc",
    "test": "jest --coverage --color --runInBand --silent",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "pre-commit": "npm run check-types && npm run lint:fix && npm run prettier:fix && git add .",
    "pre-push": "npm run test",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm test && npm run lint"
  },
  "author": "",
  "license": "MIT",
  "keywords": [
    "dynamodb migrations database data"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/technogise/dynamo-data-migrations.git"
  },
  "engines": {
    "node": "=16.0.0",
    "npm": "6.12.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "aws-sdk": "^2.1113.0",
    "commander": "^9.1.0",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21",
    "ts-import": "^4.0.0-beta.8"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.55.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": ".",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__jest__/setup.ts"
    ],
    "silent": true
  }
}
